import java.util.Scanner;
class Tax_calculate{
	public static void main(String[]args){
		Scanner scan=new Scanner(System.in);
			System.out.print("연간 근로 소득을 입력하시오 : ");
			int salary =scan.nextInt();
			int tax=0;
			if(80000000<salary)
			tax=(int)(salary*0.4);
			else if(40000000<salary)
			tax=(int)(salary*0.25);
			else if(20000000<salary)
			tax=(int)(salary*0.15);
			else
			tax=(int)(salary*0.05);
			System.out.print("세금은 "+tax+"원 입니다.");
	}
}
